<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="hu.petrik_13e.calculator.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox>
            <children>
                <TextField fx:id="leftfield" prefWidth="70.0" text="5">
                    <HBox.margin>
                        <Insets right="20.0" />
                    </HBox.margin>
                </TextField>
                <TextField fx:id="rightfield" prefWidth="70.0" text="2">
                    <HBox.margin>
                        <Insets right="20.0" />
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox>
            <children>
                <Button fx:id="plusz" mnemonicParsing="false" onAction="#plusszs" prefWidth="10.0" text="+" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="negativ" mnemonicParsing="false" onAction="#negat" prefWidth="10.0" text="-" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="szor" mnemonicParsing="false" onAction="#szorr" prefWidth="10.0" text="*" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="divide" mnemonicParsing="false" onAction="#div" prefWidth="10.0" text="/" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="percent" mnemonicParsing="false" onAction="#perc" prefWidth="10.0" text="\%" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <HBox alignment="CENTER">
            <children>
                <TextArea fx:id="aswer" nodeOrientation="LEFT_TO_RIGHT" prefHeight="10.0" prefWidth="10.0" text="10" />
            </children>
        </HBox>
    </children>
</VBox>
